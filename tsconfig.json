{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "./types/**/*",
    "./src/declarations",
    "./src/frontend"
  ],
  "exclude": [
    "node_modules"
  ],
  "noImplicitAny": false
}
